<%= form_for @user do |f| %>
  <%= render partial: "layouts/record_errors", locals: {record: @user} %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :profile_pic %>
  <%= f.text_field :profile_pic %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up!" %>
<% end %>
