<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="cards">
    <% @posts.each do |post| %>
      <div class="card">
        <p><%= link_to post.title, post %></p>
        <p><%= form_for Like.new do |f| %>
        <%= f.hidden_field :post_id, value: post.id %>
        <%= f.submit "👍 #{post.likes.size}" %>
        <% end %>
      </div>
    <% end %>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
